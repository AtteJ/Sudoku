<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_border_group"
    android:stretchColumns="false"
    tools:context="com.attej.sudoku.backend.CellGroupFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center" >

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/table_border_cell"
            android:layout_marginTop="2dp"
            android:tag="0"
            android:layout_marginStart="2dp"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/table_border_cell"
            android:tag="1"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/table_border_cell"
            android:tag="2"
            android:layout_marginEnd="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center" >

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/table_border_cell"
            android:tag="3"
            android:layout_marginStart="2dp"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/table_border_cell"
            android:tag="4"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/table_border_cell"
            android:tag="5"
            android:layout_marginEnd="1dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center" >

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/table_border_cell"
            android:tag="6"
            android:layout_marginStart="2dp"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/table_border_cell"
            android:tag="7"
            />

        <com.attej.sudoku.backend.Cell
            android:id="@+id/cell9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/table_border_cell"
            android:tag="8"
            android:layout_marginEnd="1dp"
            />
    </TableRow>

</TableLayout>